<div class="relative flex flex-col h-full pt-8 overflow-x-scroll">
    <div class="user flex content-center items-center justify-center flex-col mb-8">
        {{#each user}}
        {{#if this.photo_url}}
        <div class="image overflow-hidden rounded-full border-4 w-1/3 mx-auto img-profil-container">
            <img class="img-profil" src="/uploads/{{this.photo_url}}" alt="">
        </div>
        {{else}}
        <div class="image overflow-hidden rounded-full border-4 w-1/3 mx-auto img-profil-container">
            <img class="img-profil" src="/img/avatar.png" alt="">
        </div>
        {{/if}}

        <div class="text-lg flex content-center items-center justify-center text-center mt-1">
            <span class="leading-none">{{this.first_name}} {{this.last_name}}</span>
        </div>
        <h2 class="text-base text-manatee-700 leading-none mt-1">{{this.email}}</h2>
        {{/each}}
    </div>

    <div
        class="text-lg font-normal text-athens-gray-900 {{#ifEquals selectedIndex 1}}bg-gray-100{{/ifEquals}} hover:bg-gray-200 rounded-lg my-1 flex items-center">
        <a href="/dashboard/" class="leading-none flex items-center w-full pl-2 py-3 mr-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25">
                </path>
            </svg>
            <span class="ml-2">Dashboard</span>
        </a>
    </div>

    <hr class="h-px my-1 bg-manatee-700" />

    <div class="text-lg font-normal text-athens-gray-900 my-1 flex items-center">
        <a href="/dashboard/interns"
            class="leading-none flex items-center w-full pl-2 py-3 mr-2 {{#ifEquals selectedIndex 2}}bg-gray-100{{/ifEquals}} hover:bg-gray-200 rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
            </svg>

            <span class="ml-2">Interns</span>
        </a>
    </div>

    <div class="text-lg font-normal text-athens-gray-900 my-1 flex items-center">
        <a href="/dashboard/groups"
            class="leading-none flex items-center w-full pl-2 py-3 mr-2 {{#ifEquals selectedIndex 3}}bg-gray-100{{/ifEquals}} hover:bg-gray-200 rounded-lg ">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
            </svg>

            <span class="ml-2">Groups</span>
        </a>
    </div>


    <div class="text-lg font-normal text-athens-gray-900 my-1 flex items-center">
        <a href="/dashboard/groups"
            class="leading-none flex items-center w-full pl-2 py-3 mr-2 {{#ifEquals selectedIndex 3}}bg-gray-100{{/ifEquals}} hover:bg-gray-200 rounded-lg ">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z" />
            </svg>

            <span class="ml-2">Projects</span>
        </a>
    </div>


    <hr class="h-px my-1 bg-manatee-700" />

    <div class="text-lg font-normal text-athens-gray-900 my-1 flex items-center">
        <a href="/dashboard/settings/account/"
            class="leading-none flex items-center w-full pl-2 py-3 mr-2 {{#ifEquals selectedIndex 6}}bg-gray-100{{/ifEquals}} hover:bg-gray-200 rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z">
                </path>
            </svg>
            <span class="ml-2">Account</span>
        </a>
    </div>

    <div class="text-lg font-normal text-athens-gray-900 my-1 flex items-center">
        <a href="/dashboard/settings/all"
            class="leading-none flex items-center w-full pl-2 py-3 mr-2 {{#ifEquals selectedIndex 7}}bg-gray-100{{/ifEquals}} hover:bg-gray-200 rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z">
                </path>
            </svg>
            <span class="ml-2">Settings</span>
        </a>
    </div>

    <div class="flex content-center items-center justify-center flex-col px-4 pt-8 pb-4">
        <img src="/img/logo.png" class="h-8 w-auto mb-2">
        <p class="text-manatee-700 leading-tight text-center">All rights reserved to their responsible owners
            &copy; ITQAN Labs 2024.
        </p>
    </div>
</div>